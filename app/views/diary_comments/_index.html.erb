<% diary.diary_comments.each do |diary_comment| %>
<% diary_comment_user = diary_comment.user %>
  <tr>
    <th>
      <%= link_to user_path(diary_comment_user), class: "user_#{diary_comment_user.id}", class:"text-dark" do %>
    	<%= attachment_image_tag diary_comment_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class:"mb-1 rounded-circle"; %>
      <%= diary_comment_user.name %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th><%= simple_format diary_comment.comment %></th>
  </tr>
  <tr>
    <th><%= diary_comment.created_at.strftime('%Y/%m/%d %H:%M') %></th>
  </tr>
  <% if current_user == diary_comment_user %>
  <tr class="comment-delete">
    <th><%= link_to "削除", diary_diary_comment_path(diary_comment.diary, diary_comment), method: :delete, remote: true, class:"text-dark" %></th>
  </tr>
  <% end %>
<% end %>
