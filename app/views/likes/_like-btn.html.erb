<% if diary.liked_by?(current_user) %>
  <%= link_to diary.likes.count, diary_likes_path(diary), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to diary.likes.count, diary_likes_path(diary), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>