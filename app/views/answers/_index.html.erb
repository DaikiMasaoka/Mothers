<% trouble.answers.each do |answer| %>
<% answer_user = answer.user %>
  <tr>
    <th>
      <%= link_to user_path(answer_user), class: "user_#{answer_user.id}", class:"text-dark" do %>
    	<%= attachment_image_tag answer_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class:"mb-1 rounded-circle"; %>
      <%= answer_user.name %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th><%= simple_format answer.comment %></th>
  </tr>
  <tr>
    <th><%= answer.created_at.strftime('%Y/%m/%d %H:%M') %></th>
  </tr>
  <% if current_user == answer_user %>
  <tr class="comment-delete">
    <th><%= link_to "削除", trouble_answer_path(answer.trouble, answer), method: :delete, remote: true, class:"text-dark" %></th>
  </tr>
  <% end %>
<% end %>