<h1>画像投稿フォーム</h1>
<%= form_with model: @diary, url:'/diarys', local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>題名</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<% @diarys.each do |diary| %>
<div>
  <%= link_to diary_path(diary.id) do %>
  <%= attachment_image_tag diary, :image %>
  <% end %>
  <p>ショップ名：<%= diary.title %></p>
  <p>説明：<%= diary.body %></p>
  <p><%= link_to "#{diary.diary_comments.count} コメント", diary_path(diary.id) %></p>
</div>
<% end %>