<div class="containar">
  <div class="row">
    <div class="col-5 mx-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-center bg-light p-4 mb-0">お悩み相談</h5>
      <div class="form-body p-4">
        <%= form_with model:@trouble, local:true do |f| %>
          <div class="input-group mb-3 mt-4">
          <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
          </div>
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"内容" %>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-6 mx-auto">
      <% @troubles.each do |trouble| %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col-2">題名</th>
            <th scope="col-2">内容</th>
            <th scope="col-2">コメント数</th>
           </tr>
        </thead>
        <tbody>
          <tr>
          <td>
            <%= link_to trouble_path(trouble.id) do %>
            <%= trouble.title %>
            <% end %>
          </td>
          <td><%= trouble.body %></td>
          <td><%= link_to "コメント数: #{trouble.answers.count}", trouble_path(trouble.id) %></td>
        </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>