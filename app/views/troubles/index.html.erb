<h1>お悩み相談フォーム</h1>
<%= form_with model:@trouble, local:true do |f| %>
  <h4>題名</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<% @troubles.each do |trouble| %>
<div>
  <%= link_to trouble_path(trouble.id) do %>
  <p>題名：<%= trouble.title %></p>
  <% end %>
  <p>説明：<%= trouble.body %></p>
  <p><%= link_to "コメント数: #{trouble.answers.count}", trouble_path(trouble.id) %></p>

</div>
<% end %>