<div class="container">
  <div class="row">
    <h3 class="my-4 px-4 rounded-circle", style="background:#EEEEEE;"> 新規会員登録 </h3>
  </div>
  <div class="row">
    <div class="col-lg-8 offset-lg-1" >
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="font-weight-normal">名前</th>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>
          <tr>
            <th class="font-weight-normal">メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th class="font-weight-normal">パスワード(6⽂字以上)</th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th class="font-weight-normal">パスワード(確認⽤)</th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th></th>
              <td><%= f.submit "新規登録",class: 'btn btn-success mt-2 px-5' %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h3 class="my-3 px-4 rounded-circle", style="background:#EEEEEE;">既に登録済みの方</h3>
  </div>
    <div class="mt-3"><%= link_to "こちら", new_user_session_path %>からログインしてください</div>
  </div>